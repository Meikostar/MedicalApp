<?xml version="1.0" encoding="utf-8"?>
<com.canplay.medical.view.SwipeListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/sll_main">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_delete"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:background="#ff4439"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="删除" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/white"

            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="13dp"
                android:id="@+id/tv_time"
                android:text="09:00"
                android:textColor="@color/slow_black"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="12dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/tv_content"
                android:text="09,每天"
                android:textColor="@color/color6"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"/>
        <com.canplay.medical.view.RegularListView

            android:layout_marginTop="3dp"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"
            android:id="@+id/rl_list"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            style="@style/lv_content"/>


    </LinearLayout>
</com.canplay.medical.view.SwipeListLayout>