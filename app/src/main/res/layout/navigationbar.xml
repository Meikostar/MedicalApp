<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height">

    <LinearLayout
        android:id="@+id/topview_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ease_common_tab_bg"
        >

        <ImageView
            android:id="@+id/top_view_back"
            android:layout_width="@dimen/header_right_iconHw"
            android:layout_height="@dimen/header_right_iconHw"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/header_left_paddingLeft"
            android:layout_marginRight="@dimen/header_left_paddingLeft"
            android:src="@drawable/header_arrow_bg" />
    </LinearLayout>

    <TextView

        android:id="@+id/navigationbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/textsize_big" />
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/topview_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/top_view_right"
                android:layout_width="@dimen/header_right_iconHw"
                android:layout_height="@dimen/header_right_iconHw"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/header_right_paddingRight"
                android:layout_marginRight="@dimen/header_right_paddingRight" />

            <TextView
                android:background="@drawable/blue_oval_line"
                android:id="@+id/delete_text"
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginRight="12dp"
                android:text="新建"
                android:textColor="@color/blue"
                android:textSize="15sp" />
        </FrameLayout>
        <ImageView
            android:visibility="gone"
            android:id="@+id/right_img"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/linecolor"
        android:visibility="visible" />

</RelativeLayout>